extends layout
block content
  h1 Genre : #{genre.name}
  h3 Books
  div(style='margin-top:20px')
    dl
      each val in book
        dt 
          a(href=val.url) #{val.title}
        dd #{val.summary}
      else 
        p This genre has no books
  hr
  p
    a(href=genre.url+'/delete')
      button.btn.btn-primary(type='button') Delete
  p
    a(href=genre.url+'/update')
      button.btn.btn-primary(type='button') Update